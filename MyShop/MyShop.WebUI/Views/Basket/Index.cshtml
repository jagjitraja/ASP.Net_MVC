@model IEnumerable<MyShop.Core.ViewModels.BasketItemViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Cart</h2>

<table class="table">
    <tr>

        <th>

        </th>

        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            Line Total
        </th>
        <th>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="~/Content/ProductImages/@item.ImageURL">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @String.Format("{0:c}", item.Price);
            </td>
            <td>
                @String.Format("{0:c}", (item.Price * item.Quantity));
            </td>
            <td>
                @Html.ActionLink("Remove From Cart", "RemoveFromBasket", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>

    }
    <tr>
        <td colspan="4" class="alert-success"><strong>Basket Total:</strong></td>
        <td>
            @String.Format("{0:c}", (from p in Model select p.Price * p.Quantity).Sum());
        </td>
    </tr>
</table>
